generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id            String      @id @default(uuid())
  nome          String?
  telefone      String?
  email         String      @unique
  senha         String
  profissao     String?
  rg            String?
  cpf           String?
  type          Int?
  estado_civil  String?
  naturalidade  String?
  nome_solteiro Boolean?
  is_admin      Boolean?
  status        String?
  created_at    DateTime    @default(now())
  updated_at    DateTime    @updatedAt
  endereco      endereco?
  pagamento     pagamento?
  documentos    documento[]

  usuario_vinculado user?   @relation("UserToUser", fields: [usuario_id], references: [id])
  usuario_id        String? @unique

  conjuge       user?          @relation("UserToUser")
  date          date?
}

model endereco {
  id          String   @id @default(uuid())
  complemento String?
  estado      String?
  cidade      String?
  pais        String?
  cep         String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  user    user?   @relation(fields: [user_id], references: [id])
  user_id String? @unique
}

model documento {
  id         String   @id @default(uuid())
  url        String
  nome       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user    user   @relation(fields: [user_id], references: [id])
  user_id String
}

model pagamento {
  id          String   @id @default(uuid())
  porcentagem Int?
  total       Int      @default(4000)
  valor_pago  Int?
  pago        Boolean
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  user    user?   @relation(fields: [user_id], references: [id])
  user_id String? @unique
}

model date {
  id       String   @id @default(uuid())
  date     String
  time     String
  datetime DateTime

  user    user?   @relation(fields: [user_id], references: [id])
  user_id String? @unique
}

model resetpassword {
  id         String   @id @default(uuid())
  email      String
  code       String
  created_at DateTime @default(now())
}
